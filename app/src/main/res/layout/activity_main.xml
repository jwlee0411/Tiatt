        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:backgroundTint="@color/background_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <soup.neumorphism.NeumorphImageButton
            android:id="@+id/bottom_dictionary"
            style="@style/Widget.Neumorph.ImageButton"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:padding="22dp"
            android:scaleType="centerInside"
            android:src="@drawable/bottom_icon_dictionary"
            app:neumorph_shapeType="pressed"/>

        <soup.neumorphism.NeumorphImageButton
            android:id="@+id/bottom_translate"
            style="@style/Widget.Neumorph.ImageButton"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:padding="18dp"
            android:scaleType="centerInside"
            android:src="@drawable/bottom_icon_translate"/>

        <soup.neumorphism.NeumorphImageButton
            android:id="@+id/bottom_quiz"
            style="@style/Widget.Neumorph.ImageButton"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:padding="22dp"
            android:scaleType="centerInside"
            android:src="@drawable/bottom_icon_quiz"/>

        <soup.neumorphism.NeumorphImageButton
            android:id="@+id/bottom_match_game"
            style="@style/Widget.Neumorph.ImageButton"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:padding="22dp"
            android:scaleType="centerInside"
            android:src="@drawable/bottom_icon_match_game"/>

    </LinearLayout>

